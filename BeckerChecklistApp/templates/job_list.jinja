{% from 'macros.jinja' import render_description with context %}
{% extends 'base.jinja' %}

{% block content %}
  <div class="container">
    <h1>Jobs</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th style="min-width: 15vh;">Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for job in jobs %}
        <tr>
          <td>{{ job.name }}</td>
          {{render_description(job)}}
          <td>
            <a href="create_new_job/{{job.pk}}" class="btn btn-sm btn-primary">Start</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
