{% extends 'base.jinja' %}

{% block content %}
<div class="container">
  <h1>Completed Jobs</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="min-width: 15vh;">Name</th>
        <th style="word-wrap: break-word; max-width: 250px;">Description</th>
        {% if request.user.is_superuser %}
        <th>User</th>
        {% endif %}
        <th>Client</th>
        <th>Completed Date</th>
      </tr>
    </thead>
    <tbody>
      {% for job in completed_jobs %}
      <tr class="click-row" data-href="/job_summary/{{job.pk}}">
        <td>{{ job.started_job.job.name }}</td>
        <td style="word-wrap: break-word; max-width: 250px;">{{ job.started_job.job.description }}</td>
        {% if request.user.is_superuser %}
        <td>{{ job.user }}</td>
        {% endif %}
        <td>{{job.started_job.client_name}}</td>
        <td>{{localtime(job.created_at).strftime('%Y-%m-%d %H:%M') }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
<script>
  const rows = document.querySelectorAll('.click-row');
  rows.forEach(row => {
    row.addEventListener('click', () => {
      window.location = row.getAttribute('data-href');
    });
  });
</script>
{% endblock %}
