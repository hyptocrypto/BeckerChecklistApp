{% extends 'base.jinja' %}

{% block content %}
  <div class="container">
    <h1>Completed Jobs</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Completed Date</th>
        </tr>
      </thead>
      <tbody>
        {% for job in completed_jobs %}
        <tr>
          <td>{{ job.job.name }}</td>
          <td>{{ job.job.description }}</td>
          <td>{{localtime(job.created_at).strftime('%Y-%m-%d %H:%M') }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
